# .env.example
# Copy this file to .env and fill in your actual values
# ⚠️ Do NOT commit .env to git - it contains sensitive information
# ⚠️ All secrets should be set as environment variables in production (Railway)

# =============================================================================
# REQUIRED SECRETS (must be set in production)
# =============================================================================

# Telegram Bot Token from @BotFather
# Get a new token by messaging @BotFather on Telegram
# NEVER share or commit your bot token!
BOT_TOKEN=

# PostgreSQL Database URL (Railway provides this automatically)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# Security: HMAC pepper for user hashing (64 hex chars)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# ⚠️ NEVER CHANGE after production deployment - will invalidate all user hashes
HASH_PEPPER=

# Security: Salt for user hashing (64 hex chars)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# ⚠️ NEVER CHANGE after production deployment - will invalidate all user hashes
USER_HASH_SALT=

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Admin User IDs (comma-separated Telegram user IDs)
# These users can access /stats and /export_stats commands
# Find your user ID by messaging @userinfobot on Telegram
ADMIN_IDS=

# Enable zero-knowledge security architecture (MUST be true in production)
USE_SECURE_DATABASE=true

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Web App URL (hosted Mini App for email campaigns)
WEBAPP_URL=

# Data retention policy (days) - action logs older than this are deleted
ACTION_LOG_RETENTION_DAYS=30

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Feature Flags
ENABLE_OCR_VERIFICATION=true
MAINTENANCE_MODE=false
