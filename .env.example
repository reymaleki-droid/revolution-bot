# .env.example
# Copy this file to .env and fill in your actual values
# Do NOT commit .env to git - it contains sensitive information

# Telegram Bot Token from @BotFather
# Get a new token by messaging @BotFather on Telegram
# NEVER share or commit your bot token!
BOT_TOKEN=your_bot_token_here

# Security Mode (use_secure_database)
# Set to 'true' to enable zero-knowledge security architecture
USE_SECURE_DATABASE=true

# Admin User IDs (comma-separated Telegram user IDs)
# These users can access /stats and /export_stats commands
# Find your user ID by messaging @userinfobot on Telegram
ADMIN_IDS=123456789,987654321

# Web App URL (hosted Mini App)
WEBAPP_URL=https://yourdomain.com/webapp/index.html

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=revolution_bot_secure.db

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Feature Flags
ENABLE_OCR_VERIFICATION=true
ENABLE_AUTO_APPROVAL=false
MAINTENANCE_MODE=false

# Points Multiplier (optional, for events)
POINTS_MULTIPLIER=1.0
